<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res/com.jjm.android.quiz">
    <item android:state_enabled="false"
          android:color="#d8d8d8"/>
    <item app:state_showing_answer="false"
          android:state_enabled="true"
          android:color="#ff8f00"/>
    <item app:state_showing_answer="true"
          app:state_correct="false"
          android:state_enabled="true"
        android:color="#ad2416"/>
    <item app:state_correct="true"
          app:state_showing_answer="true"
          android:state_enabled="true"
          android:color="#377d00"/>
</selector>